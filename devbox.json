{
  "packages": [
    "yq-go@latest",
    "kubebuilder@4.1.1",
    "jq@latest",
    "go@latest",
    "gotests@latest",
    "act@latest",
    "kubectl@latest",
    "docker@latest",
    "kustomize@4.3",
    "git@latest",
    "gettext@latest",
    "wget@latest",
    "cosign@latest",
    "kubernetes-helm@latest",
    "govulncheck@latest",
    "gotools@latest",
    "ginkgo@latest",
    "operator-sdk@1.36.1",
    "shellcheck@latest",
    "golangci-lint@2",
    "kubernetes-controller-tools@0.17.2",
    "setup-envtest@0.19.0",
    "awscli2@latest",
    "docker-sbom@latest",
    "openshift@latest",
    "gh@latest",
    "addlicense@latest",
    "fd@latest"
  ],
  "shell": {
    "init_hook": [
      "if test \"$(uname -s)\" = \"Darwin\"; then",
      "  echo 'Shell Hook: Applying macOS + Nix + Go 1.25 CGO fix...'",
      "  export CGO_ENABLED=0",
      "  export BUILD_TAGS='netgo,osusergo'",
      "else",
      "  echo 'Shell Hook: Not Darwin, skipping CGO fix. Using defaults.'",
      "fi"
    ]
  }
}
