{
  "packages": {
    "yq-go":                       "latest",
    "kubebuilder":                 "4.1.1",
    "jq":                          "latest",
    "gotests":                     "latest",
    "act":                         "latest",
    "kubectl":                     "latest",
    "docker":                      "latest",
    "kustomize":                   "latest",
    "git":                         "latest",
    "gettext":                     "latest",
    "wget":                        "latest",
    "cosign":                      "2.6.1",
    "kubernetes-helm":             "latest",
    "govulncheck":                 "latest",
    "gotools":                     "latest",
    "ginkgo":                      "latest",
    "operator-sdk":                "1.36.1",
    "shellcheck":                  "latest",
    "golangci-lint":               "2",
    "kubernetes-controller-tools": "0.19.0",
    "setup-envtest":               "0.19.0",
    "awscli2":                     "latest",
    "docker-sbom":                 "latest",
    "openshift":                   "latest",
    "gh":                          "latest",
    "addlicense":                  "latest",
    "fd":                          "latest",
    "go-licenses":                 "1.6.0",
    "kind":                        "latest",
    "go":                          "latest",
    "gnused":                      "latest"
  },
  "init_hook": [
    "# Prepend Go's managed GOROOT to PATH",
    "# This allows Go's toolbox version control, overriding Nix's paths",
    "export NIX_GOROOT=$(go env GOROOT)",
    "export PATH=$NIX_GOROOT/bin:$PATH",
    "unset GOROOT            # force to calculate GOROOT automatically",
    "export GOTOOLCHAIN=auto # honor go.mod's toolchain"
  ]
}
